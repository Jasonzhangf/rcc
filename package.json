{
  "name": "rcc-cli-framework",
  "version": "0.1.6",
  "description": "RCC - Modular TypeScript Framework",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rcc": "./rcc",
    "rcc-framework": "./rcc"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "rcc-config-parser": "^0.1.1",
    "rcc-debugcenter": "^0.1.0",
    "rcc-errorhandling": "^1.0.6",
    "rcc-pipeline": "^0.1.7",
    "rcc-underconstruction": "^0.1.0",
    "uuid": "^9.0.1"
  },
  "files": [
    "rcc.mjs",
    "rcc",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rcc/rcc-basemodule.git"
  },
  "homepage": "https://github.com/rcc/rcc-basemodule#readme",
  "bugs": {
    "url": "https://github.com/rcc/rcc-basemodule/issues"
  },
  "keywords": [
    "rcc",
    "basemodule",
    "module-framework",
    "typescript",
    "modular-architecture",
    "testing"
  ],
  "author": "RCC Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.52.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:esm": "rollup -c rollup.config.mjs",
    "build:all": "node build-all.mjs",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules $(which jest) --passWithNoTests",
    "test:coverage": "node --experimental-vm-modules $(which jest) --coverage",
    "test:watch": "node --experimental-vm-modules $(which jest) --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc src --out docs --theme default",
    "docs:serve": "http-server docs -p 8080 -o",
    "validate": "npm run typecheck && npm run test",
    "prepublishOnly": "npm run validate",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "module:list": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts list",
    "module:info": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts info",
    "module:config": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts config",
    "module:set": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts set",
    "module:enable": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts enable",
    "module:disable": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts disable",
    "module:load": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts load",
    "module:create": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts create",
    "module:validate": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts validate",
    "module:stats": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts stats",
    "module:refresh": "node -r ts-node/register src/cli-commands/module/src/ModuleCLI.ts refresh",
    "debug:config-paths": "ts-node debug-config-paths.ts",
    "debug:config-paths-simple": "ts-node simple-debug-config-paths.ts",
    "debug:config-paths-standalone": "ts-node standalone-debug-config-paths.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__test__/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "transform": {
      "^.+\\\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__test__/**",
      "!src/**/index.ts"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 92,
        "lines": 90,
        "statements": 90
      }
    },
    "testTimeout": 30000
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
