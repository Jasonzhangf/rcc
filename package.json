{
  "name": "rcc",
  "version": "1.0.0",
  "description": "RCC Modular Configuration System with comprehensive testing suite",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "start:integrated": "node scripts/integrated-modular-server.js",
    "test:integrated": "node scripts/test-integrated-server.js",
    "demo:modular": "node scripts/demo-modular-server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"\\.test\\.ts$\" --testPathIgnorePatterns=\"integration|performance\"",
    "test:integration": "jest --testPathPattern=\"integration\\.test\\.ts$\"",
    "test:performance": "jest --testPathPattern=\"performance\\.test\\.ts$\" --testTimeout=600000",
    "test:messaging": "ts-node scripts/test-messaging-system.ts",
    "test:messaging-communication": "ts-node scripts/test-messaging-communication.ts",
    "test:message-center": "ts-node scripts/test-message-center.ts",
    "test:error-handling": "ts-node scripts/test-error-handling.ts",
    "test:all": "./scripts/run-configuration-system-tests.sh --mode all",
    "test:coverage": "jest --coverage --coverageDirectory=test-results/coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "validate:structure": "node scripts/validate-module-structure.js",
    "validate:no-hardcoding": "node scripts/validate-no-hardcoding.js",
    "validate:api-registry": "node scripts/validate-module-api-registry.js",
    "validate:all": "npm run lint && npm run typecheck && npm run validate:structure && npm run validate:no-hardcoding && npm run validate:api-registry",
    "docs:generate": "typedoc src --out docs",
    "docs:serve": "http-server docs -p 8080",
    "clean": "rimraf dist test-results coverage",
    "precommit": "npm run validate:all && npm run test:unit",
    "prepush": "npm run test:integration",
    "security:audit": "npm audit",
    "security:scan": "npm audit --audit-level=high",
    "performance:test": "npm run test:performance",
    "ci:test": "./scripts/run-configuration-system-tests.sh --mode all --coverage --output ./test-results",
    "ci:validate": "npm run validate:all && npm run security:scan"
  },
  "keywords": [
    "rcc",
    "configuration",
    "modular",
    "testing",
    "typescript",
    "integration",
    "performance"
  ],
  "author": "RCC Development Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jasonzhangf/rcc.git"
  },
  "bugs": {
    "url": "https://github.com/Jasonzhangf/rcc/issues"
  },
  "homepage": "https://github.com/Jasonzhangf/rcc#readme",
  "dependencies": {
    "fastify": "^4.25.2",
    "fastify-websocket": "^4.3.0",
    "json5": "^2.2.3",
    "ws": "^8.16.0",
    "fs-extra": "^11.2.0",
    "node-cron": "^3.0.3",
    "eventemitter3": "^5.0.1",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "compression": "^1.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "@types/jest": "^29.5.11",
    "@types/ws": "^8.5.10",
    "@types/fs-extra": "^11.0.4",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1",
    "typedoc": "^0.25.7",
    "rimraf": "^5.0.5",
    "http-server": "^14.1.1",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__test__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/__test__/**",
      "!src/**/tests/**",
      "!src/**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "json-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 92,
        "lines": 90,
        "statements": 90
      }
    },
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "detectOpenHandles": true,
    "forceExit": true,
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    },
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  }
}
