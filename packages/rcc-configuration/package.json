{
  "name": "@rcc/configuration",
  "version": "0.1.0",
  "description": "RCC Configuration Management - Unified package for all configuration-related modules including providers, models, blacklist, and pool management",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ConfigManager": {
      "import": "./dist/ConfigManager/index.esm.js",
      "require": "./dist/ConfigManager/index.js", 
      "types": "./dist/ConfigManager/index.d.ts"
    },
    "./ProvidersManager": {
      "import": "./dist/ProvidersManager/index.esm.js",
      "require": "./dist/ProvidersManager/index.js",
      "types": "./dist/ProvidersManager/index.d.ts"
    },
    "./ModelsManager": {
      "import": "./dist/ModelsManager/index.esm.js",
      "require": "./dist/ModelsManager/index.js",
      "types": "./dist/ModelsManager/index.d.ts"
    },
    "./BlacklistManager": {
      "import": "./dist/BlacklistManager/index.esm.js",
      "require": "./dist/BlacklistManager/index.js",
      "types": "./dist/BlacklistManager/index.d.ts"
    },
    "./PoolManager": {
      "import": "./dist/PoolManager/index.esm.js",
      "require": "./dist/PoolManager/index.js",
      "types": "./dist/PoolManager/index.d.ts"
    },
    "./RoutesManager": {
      "import": "./dist/RoutesManager/index.esm.js",
      "require": "./dist/RoutesManager/index.js",
      "types": "./dist/RoutesManager/index.d.ts"
    },
    "./DeduplicationCoordinator": {
      "import": "./dist/DeduplicationCoordinator/index.esm.js",
      "require": "./dist/DeduplicationCoordinator/index.js",
      "types": "./dist/DeduplicationCoordinator/index.d.ts"
    },
    "./ConfigImportExportManager": {
      "import": "./dist/ConfigImportExportManager/index.esm.js",
      "require": "./dist/ConfigImportExportManager/index.js",
      "types": "./dist/ConfigImportExportManager/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rcc/rcc-configuration.git"
  },
  "homepage": "https://github.com/rcc/rcc-configuration#readme",
  "bugs": {
    "url": "https://github.com/rcc/rcc-configuration/issues"
  },
  "keywords": [
    "rcc",
    "configuration",
    "provider-management", 
    "model-management",
    "blacklist",
    "pool-management",
    "api-management",
    "typescript",
    "modular-architecture"
  ],
  "author": "RCC Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/uuid": "^9.0.7", 
    "@types/lodash": "^4.17.0",
    "@types/jest": "^29.5.11",
    "typescript": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-dts": "^6.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1",
    "typedoc": "^0.25.7",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:cjs": "rollup -c rollup.config.cjs.js",
    "build:esm": "rollup -c rollup.config.esm.js",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "docs:generate": "typedoc src --out docs --theme default",
    "docs:serve": "http-server docs -p 8080 -o",
    "validate": "npm run typecheck && npm run lint && npm run test:unit",
    "prepublishOnly": "npm run validate && npm run build",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags && npm publish",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor", 
    "release:major": "npm version major"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__test__"
    ],
    "testMatch": [
      "**/__test__/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__test__/**",
      "!src/**/index.ts"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 92,
        "lines": 90,
        "statements": 90
      }
    },
    "testTimeout": 30000
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}