{
  "framework": {
    "name": "rcc-cli",
    "version": "1.0.0",
    "description": "RCC4 System Command Line Interface"
  },
  "modules": {
    "paths": ["./src/cli-commands/*/src/*Module.js"],
    "autoLoad": true,
    "watchMode": false,
    "priority": {
      "start": 1,
      "stop": 2,
      "status": 3,
      "code": 4
    }
  },
  "logging": {
    "level": "info",
    "console": true
  },
  "defaults": {
    "protocol": "anthropic",
    "port": 5506
  },
  "environment": {
    "NODE_ENV": "production"
  }
}