{
  "metadata": {
    "name": "RCC Claude Code Router Configuration",
    "description": "Sample configuration for RCC Claude Code Router with multiple providers",
    "createdAt": "2025-09-11T10:00:00Z",
    "updatedAt": "2025-09-11T10:00:00Z",
    "author": "Configuration System",
    "environment": "development"
  },
  "settings": {
    "general": {
      "port": {
        "value": 5506,
        "type": "number",
        "required": true
      },
      "debug": {
        "value": true,
        "type": "boolean",
        "required": false
      }
    },
    "cors": {
      "enabled": {
        "value": true,
        "type": "boolean",
        "required": false
      },
      "origins": {
        "value": ["*"],
        "type": "array",
        "required": false
      }
    },
    "providers": {
      "openai": {
        "name": "OpenAI Provider",
        "type": "openai",
        "endpoint": "https://api.openai.com/v1",
        "models": {
          "gpt-4": {
            "name": "GPT-4",
            "contextLength": 8192,
            "supportsFunctions": true
          },
          "gpt-3.5-turbo": {
            "name": "GPT-3.5 Turbo",
            "contextLength": 4096,
            "supportsFunctions": true
          }
        },
        "auth": {
          "type": "api-key",
          "keys": ["sk-openai-test-key-1", "sk-openai-test-key-2"]
        },
        "limits": {
          "rateLimit": 3500,
          "maxTokens": 4096,
          "timeout": 30000
        }
      },
      "anthropic": {
        "name": "Anthropic Provider",
        "type": "anthropic",
        "endpoint": "https://api.anthropic.com/v1",
        "models": {
          "claude-3-sonnet": {
            "name": "Claude 3 Sonnet",
            "contextLength": 200000,
            "supportsFunctions": true
          },
          "claude-3-opus": {
            "name": "Claude 3 Opus",
            "contextLength": 200000,
            "supportsFunctions": true
          }
        },
        "auth": {
          "type": "api-key",
          "keys": ["sk-anthropic-test-key-1"]
        },
        "limits": {
          "rateLimit": 1000,
          "maxTokens": 4096,
          "timeout": 30000
        }
      }
    },
    "virtualModels": {
      "smart-assistant": {
        "targetProvider": "openai",
        "targetModel": "gpt-4"
      },
      "budget-assistant": {
        "targetProvider": "openai",
        "targetModel": "gpt-3.5-turbo"
      },
      "creative-assistant": {
        "targetProvider": "anthropic",
        "targetModel": "claude-3-opus"
      }
    },
    "routes": {},
    "security": {
      "rateLimiting": {
        "enabled": {
          "value": true,
          "type": "boolean",
          "required": false
        },
        "maxRequests": {
          "value": 100,
          "type": "number",
          "required": false
        },
        "windowMs": {
          "value": 60000,
          "type": "number",
          "required": false
        }
      },
      "authentication": {
        "required": {
          "value": false,
          "type": "boolean",
          "required": false
        }
      }
    },
    "monitoring": {
      "logging": {
        "level": {
          "value": "info",
          "type": "string",
          "required": false
        },
        "file": {
          "value": "./logs/rcc.log",
          "type": "string",
          "required": false
        }
      },
      "metrics": {
        "enabled": {
          "value": true,
          "type": "boolean",
          "required": false
        },
        "endpoint": {
          "value": "/metrics",
          "type": "string",
          "required": false
        }
      }
    }
  },
  "version": "1.0.0"
}