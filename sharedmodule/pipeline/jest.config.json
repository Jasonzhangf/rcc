{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src",
    "<rootDir>/__test__"
  ],
  "testMatch": [
    "**/__test__/**/*.test.ts",
    "**/src/**/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/__test__/**",
    "!src/**/index.ts"
  ],
  "coverageReporters": [
    "html",
    "text",
    "text-summary",
    "lcov"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 85,
      "lines": 85,
      "statements": 85
    }
  },
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/__test__/setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/__test__/"
  ]
}