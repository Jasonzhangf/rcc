{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/modules/ErrorHandlingCenter/**/*",
    "src/core/UnderConstruction.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__test__/**",
    "**/__tests__/**",
    "**/tests/**"
  ]
}