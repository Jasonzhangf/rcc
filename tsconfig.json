{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationDir": "./dist/dts",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "sharedmodule/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__test__",
    "**/*.test.ts",
    "**/examples/**",
    "**/__test__/**",
    "**/test-*.ts",
    "**/debug-test.ts",
    "**/simple-test.ts",
    "**/webui/**",
    "**/Configuration/**",
    "**/errorhandling/**",
    "**/Qwen*.ts",
    "sharedmodule/pipeline/src/ConfigurationExamples.ts",
    "sharedmodule/pipeline/src/EnhancedErrorResponseCenter.ts",
    "sharedmodule/pipeline/src/ErrorHandlerCenter.ts",
    "sharedmodule/pipeline/src/PipelineCompleteConfig.ts",
    "sharedmodule/pipeline/src/PipelineConfig.ts",
    "sharedmodule/pipeline/src/PipelineInstance.ts",
    "sharedmodule/pipeline/src/PipelineScheduler.ts",
    "sharedmodule/pipeline/src/QwenCompatibilityModule.ts",
    // "sharedmodule/pipeline/src/QwenProviderModule.ts",
    "sharedmodule/pipeline/src/QwenErrorHandling.ts",
    "sharedmodule/pipeline/src/LoadBalancers.ts",
    "sharedmodule/pipeline/src/PipelineConfigValidator.ts",
    "sharedmodule/pipeline/src/ConfigConverter.ts",
    "sharedmodule/pipeline/src/EnhancedPipelineConfig.ts",
    "sharedmodule/pipeline/src/CompletePipelineConfig.ts",
    "sharedmodule/pipeline/src/SimpleConfigurationExamples.ts",
    "sharedmodule/pipeline/src/assembler/**"
  ]
}